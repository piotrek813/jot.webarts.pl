---
 export type Props = {
	 data: {
		 question: string,
		 answer: string
	 }[],
 }

 const {data} = Astro.props;
---

<section class="standard-width">
	<h2>Czesto zadawane <span class="colored">pytania</span></h2>

	{data.map(({question, answer}) => (
		<details>
		<summary><img src="/icon/chevron_right.svg" alt=""> {question}</summary>
		<div class="answer"> {answer} </div>
		</details>

		<hr>
	))}
</section>

<style>
	section {
		margin-top: var(--section-spacer);
	}

	h2 {
		font-size: var(--font-size-ml);
		text-align: center;
		margin-bottom: 21px;
	}

	details {
		padding: 8px 16px;
	}

	summary {
		font-size: var(--font-size-nm);
		font-weight: 500;

		display: flex;
		gap: 10px;
		list-style-type: none;
	}	

	details[open]  img {
		rotate: 90deg;
	}

	.answer {
		margin-top: 8px;
		margin-left: 30px;
	}

	hr {
		margin: 10px 0;
		color: var(--color-border);
	}
</style>
